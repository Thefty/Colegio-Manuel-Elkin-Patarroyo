<h2 class="text-center">Todos los usuarios</h2>

<%= link_to "Atras", articulos_path, class: "btn btn-primary  mb-2" %>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow-lg">
      <div class="card-body">
        <div class="box">
          <div class="table-responsive">
            <table class="table">
              <tr class="thead-dark">
                <th>Identificación</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Telefono</th>
                <th>Dirección</th>
                <th>Email</th>
                <th colspan="3">Acciones</th>
              </tr>
              <%= render @users %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
