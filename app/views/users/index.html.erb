<h2 class="text-center">Todos los usuarios</h2>

<%= link_to new_user_path(@user), class: "btn btn-info btn-sm mt-2 mb-3" do %>
    Nuevo usuario
    <%= fa_icon "plus" %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="box">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <% if @users.empty?%>
                                        <th>Identificacion</th>
                                        <th>Nombres</th>
                                        <th>Apellidos</th>
                                        <th>Direccion</th>
                                        <th>Telefono</th>
                                        <th>Email</th>
                                    <% elsif %>
                                        <th>Identificacion</th>
                                        <th>Nombres</th>
                                        <th>Apellidos</th>
                                        <th>Direccion</th>
                                        <th>Telefono</th>
                                        <th>Email</th>
                                        <th colspan="3">Acciones</th> 
                                    <% end %>
                                </tr>
                            </thead>
                            <tbody>
                                <%= render @users %>
                            </tbody>
                    
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

