<div class="container">
  <div class="row">
    <div class="col-12 my-3 pt-3 shadow" style="width: 200px; height: 300%;">
      <div style="width: 200px; height: 300px; float: left;">
        <%= image_tag  @user.picture.thumb.url, class:'float-left', :style=>"width:200px;height:100%" %>
      </div>

      <div style="position: absolute; left: 400px;">

        <p>Identificación: <strong><%= @user.identificacion %></strong></p>
        <p>Nombre: <strong><%= @user.nombre %></strong></p>
