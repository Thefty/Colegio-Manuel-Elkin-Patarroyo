<div class="row">
    <div class="col-md-12">
      <div class="card shadow-lg">
            <div class="card-body">
            <div class="box">
                <div class="table-responsive">
                    <table class="table">
                        <tr class="thead-dark" >
                            
                            <th>Identificacion</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                                
                        </tr>


                        <tr>
                            <% @users.each do |user| %>
                            <td>
                                <%= user.identificacion%>
                            </td>
                            <td>
                                <%= user.nombre%>
                            </td>

                            <td>
                                <%= user.apellido %>
                            </td>
                            
                        </tr> 
                        <%end %>

                    </table>

                    
                </div>
            
            </div>
        </div>    
    </div>
</div>    
