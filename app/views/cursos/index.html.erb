<%= link_to new_curso_path(@curso), class: "btn btn-info btn-sm mb-3 mt-5" do %>
  Nuevo curso
  <%= fa_icon "plus" %>
<% end %>
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="box">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <% if @cursos.empty?%>
                                    <th>Codigo</th>
                                    <th>Nombre</th>
                                    <% elsif %>
                                    <th>Codigo</th>
                                    <th>Nombre</th>
                                    <th colspan="3">Acciones</th>
                                    <% end %>
                                </tr>
                            </thead>
                            <tbody>                   
                                <%= render @cursos %>                
                            </tbody>                   
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


