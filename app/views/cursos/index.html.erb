<h1>Todos los cursos</h1>

<%= link_to new_curso_path, class: "btn btn-info btn-sm mb-3" do %>
  Registrar Curso
  <%= fa_icon "plus" %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow-lg">
      <div class="card-body">
        <div class="box">
          <div class="table-responsive">
            <table class="table">
              <tr class="thead-dark">
                <% if @cursos.empty? %>
                  <th>Codigo</th>
                  <th>Nombre</th>
                <% elsif %>
                  <th>Codigo</th>
                  <th>Nombre</th>
                  <th colspan="3">Acciones</th>
                <% end %>
              </tr>
              <%= render @cursos %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
