<h2 class="text-center">Todas las materias</h2>

<%= link_to new_materia_path(@materia), class: "btn btn-info btn-sm mb-3" do %>
  Nueva Materia
  <%= fa_icon "plus" %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="box">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-dark">
                                <% if @materias.empty? %>
                                    <th>Codigo</th>
                                    <th>Materia</th>
                                <% elsif %>
                                    <th>Codigo</th>
                                    <th>Materia</th>
                                    <th colspan="3" >Acciones</th>
                                <% end %>        
                            </thead>
                            <tbody>
                                <%= render @materias %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
