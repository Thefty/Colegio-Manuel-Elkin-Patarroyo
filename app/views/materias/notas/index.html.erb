<%= link_to  user_materia_path(@materia.user,@materia), class: "btn btn-primary btn-sm" do %>
  <i class="fas fa-arrow-left"></i>
  Regresar
<% end %>

<h3>Notas del Alumno(a) <%= @materia.user.nombre %>  <%= @materia.user.apellido %></h3>

<div class="col-md-6">
  <div class="row">
    <div class="col">
      <%= link_to new_materia_nota_path(@materia,@nota), class: "btn btn-info btn-sm" do %>
        Nueva nota
        <%= fa_icon "plus" %>
      <% end %>
    </div>

    <div class="col">
      <%= link_to materia_notas_path(format: 'pdf'), class: "btn btn-danger btn-sm" do %>
        <i class="fas fa-file-pdf"></i>
        Generar PDF
      <% end %>
    </div>

    <div class="col">
      <%= link_to materia_notas_path(format: 'xlsx'), class: "btn btn-success btn-sm" do %>
        <i class="fas fa-file-excel"></i>
         Generar Excel
      <% end %>
    </div>
  </div>
</div>
<h3 class="mt-2">Promedio: <span><%= @promedio_estudiante %></span></h3>

<div class="row">
  <div class="col-md-12">
    <div class="card card-shadow">
      <div class="card-body">
        <div class="box">
          <div class="table-responsive">
            <table class="table">
              <tr class="thead-dark" >
                <% if @notas.empty? %>
                  <th>Logro</th>
                  <th>Nota</th>
                <% elsif %>
                  <th>Logro</th>
                  <th>Nota</th>
                  <th colspan="3">Acciones</th>
                <% end %>
              </tr>
              <%= render @notas %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
