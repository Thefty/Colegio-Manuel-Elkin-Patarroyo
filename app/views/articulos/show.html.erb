<div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card shadow-lg ">
        <div class="card-body">
          <div class="box">
            <h2 class="text-center">Información de la noticia</h2>
            <div class="d-flex justify-content-center mb-2">
              <%= image_tag  @articulo.picture.thumb.url , class:'card-img-top',:style => "width: 250px; height: 200px;"%>
            </div>
            <p>
              <strong>Titulo:</strong>
              <%= @articulo.titulo %>
            </p>
            <p>
              <strong>Descripcion:</strong>
              <%= @articulo.descripcion %>
            </p>
            <p>
              <strong>Información:</strong>
              <%= @articulo.informacion %>
            </p>

            <div class="row">
              <div class="col">
                <%= link_to "Atras", articulos_path, class: "btn btn-primary btn-block" %>
              </div>
              <div class="col">
                <%= link_to "Editar", edit_articulo_path(@articulo), class: "btn btn-warning btn-block" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
