<%= link_to   new_role_path(@rol), class:"btn btn-info mt-3 mb-3" do %>
    Nuevo rol
    <%= fa_icon "plus" %>
<% end %>
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-lg mt-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <thead class="thead-dark">
                            <% if @roles.empty?%>
                                <th>Nombre</th>
                            <% elsif %>   
                                <th>Nombre</th>
                                <th colspan="3" >Acciones</th>
                            <% end %>    
                            </thead>
                        </tr>
                        <%= render @roles %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>